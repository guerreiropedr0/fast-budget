<header class="header container primary-gradient-background">
  <h1>Groups</h1>
</header>
<section>
  <% if @groups.empty? %>
    <div class="information padding border">
      <h3 class="text-center">No groups yet.</h3>
    </div>
  <% else %>
  <% @groups.each do |group| %>
    <div class="d-flex information border gap">
      <img src=<%= group.icon %> alt=<%= group.name %> class="icon">
      <div class="container flex-fill justify-content-between">
        <div class="d-flex justify-content-between">
          <h3><%= link_to group.name, group_operations_path(group_id: group.id) %></h3>
          <p>$<%= group_amount(group) %></p>
        </div>
        <small>
          <%= group.created_at.strftime("%d %b %Y") %>
        </small>
      </div>
    </div>
  <% end %>
  <% end %>
  <div class="margin">
    <%= link_to "Add group", new_group_path, class: "btn" %>
  </div>
</section>
