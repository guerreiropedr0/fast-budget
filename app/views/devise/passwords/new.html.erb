<header class="header container primary-gradient-background">
  <h1 class="position-absolute">
    <%= link_to root_path do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
  </h1>
  <h1 class="text-center margin-y">Forgot your password?</h1>
</header>

<div class="container form margin-y border-y">
  <%= turbo_frame_tag resource do %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Send me reset password instructions", class: "btn align-self-start" %>
      </div>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
