<header class="header container primary-gradient-background">
  <h1 class="position-absolute">
    <%= link_to root_path do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
  </h1>
  <h1 class="text-center margin-y">Log in</h1>
</header>

<div class="container form margin-y border-y">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group checkbox">
        <%= f.check_box :remember_me, class: "check" %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="actions form-group">
      <%= f.submit "Log in", class: "btn align-self-start" %>
    </div>
  <% end %>


<%= render "devise/shared/links" %>
</div>
